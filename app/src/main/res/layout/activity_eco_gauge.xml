<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcoGaugeActivity"
    android:background="@color/light_pink">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_border_linearlayout"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/totalWeeklyEmissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="weekly"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        />
                    <Button
                        android:id="@+id/totalMonthlyEmissionsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="monthly"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black" />
                    <Button
                        android:id="@+id/totalYearlyEmissionsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yearly"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black" />
                </LinearLayout>
                <TextView
                    android:id="@+id/totalEmissionsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Emissions Breakdown"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_border_linearlayout"
                android:layout_margin="15dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/emissionsChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Emissions Trend Graph"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_border_linearlayout"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/dailyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="daily"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        />
                    <Button
                        android:id="@+id/weeklyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="weekly"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black" />
                    <Button
                        android:id="@+id/monthlyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="monthly"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/black" />
                </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                </com.github.mikephil.charting.charts.LineChart>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    

</androidx.constraintlayout.widget.ConstraintLayout>