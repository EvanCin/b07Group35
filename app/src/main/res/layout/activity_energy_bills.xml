<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/energy_bg"
    android:weightSum="100"
    android:id="@+id/energy"
    tools:context=".EnergyBillsActivity">

    <Button
        android:id="@+id/energyBills_button"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="@color/green_shade4"
        android:text="Energy Bills"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/questionsMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Select the type of Energy Bill"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spinnerEnergyBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Enter the Bill Amount"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/bill_energy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter in Dollars"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/add_button_EnergyBills"
                android:layout_width="0dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add"
                android:backgroundTint="@color/green_shade4"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/done_button_energy"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green_shade"
        android:text="Done"
        android:textColor="@android:color/white"
        android:textSize="23sp" />
</LinearLayout>